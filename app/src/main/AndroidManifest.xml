<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Gaurav.basicbankingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bank"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bank"
        android:supportsRtl="true"
        android:theme="@style/Theme.BasicBankingApp">
        <activity android:name=".Activities.SplashScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.infoActivity" />
        <activity android:name=".Activities.SendToUserList" />
        <activity android:name=".Activities.CustomerList" />
        <activity android:name=".Activities.TransactionHistory" />
        <activity android:name=".Activities.CustomerData" />
        <activity android:name=".Activities.HomeScreen"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>